# Voice-to-Text Application Configuration

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5001

# Database Configuration
# For SQLite (default):
DATABASE_URL=sqlite:///voice2text.db

# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/voice2text

# For MySQL:
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/voice2text

# Email Configuration (for password reset)
# Using Gmail SMTP as example:
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=Voice-to-Text <noreply@yourdomain.com>

# Note: For Gmail, you need to use an App Password instead of your regular password
# Generate one at: https://myaccount.google.com/apppasswords

# Whisper Model Configuration
# Options: tiny, base, small, medium, large
WHISPER_MODEL=base

# Upload Settings
MAX_FILE_SIZE_MB=500
UPLOAD_FOLDER=uploads

# Logging
LOG_LEVEL=INFO
